{{#each this}}
  <li class='hero-list__item'>
    <img
      src='https://image.tmdb.org/t/p/w500/{{poster_path}}'
      alt={{title}}
      class='hero-list__img'
      style='height: 300px;'
    />
    <h3 class='hero-list__title line-clamp'>{{title}}</h3>
    <p class='hero-list__desc'>
      {{genres}}
      |
      {{release_date}}
    </p>
  </li>
{{/each}}